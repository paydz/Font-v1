text.Position = UDim2.new(0, 10, 0, 130)
text.BackgroundTransparency = 1
text.Parent = InfoTab.Section

-- N√∫t copy Discord
InfoTab:AddButton({
    Title = "Discord",
    Description = "Copy link Discord",
    Callback = function()
        setclipboard(DISCORD_LINK)
        Fluent:Notify({
            Title = "ƒê√£ copy",
